<%- include('../partials/header.ejs') %>
<div class="content">
    <div class="center-container">
        <form action = '/meetups/<%= meetup.id%>?_method=PUT' method = 'POST' class="mt-20">
            <label for="topic">Topic</label>
            <input type="text" id="topic" name="topic" placeholder="Enter topic.." value="<%= meetup.topic %>" required>

            <label for="name">Title</label>
            <input type="text" id="name" name="name" placeholder="Enter title.." value="<%= meetup.name %>" required>

            <label for="interests">Interests</label>
            <select id="interests" name="interests" class="fixed-width" required>
                <option value="All" <% if(meetup.interests === "All"){ %> selected <% } %>>All</option>
                <option value="Sports" <% if(meetup.interests === "Sports"){ %> selected <% } %>>Sports</option>
                <option value="Music" <% if(meetup.interests === "Music"){ %> selected <% } %>>Music</option>
                <option value="Games" <% if(meetup.interests === "Games"){ %> selected <% } %>>Games</option>
                <option value="Adventure" <% if(meetup.interests === "Adventure"){ %> selected <% } %>>Adventure</option>
                <option value="Health" <% if(meetup.interests === "Health"){ %> selected <% } %>>Health</option>
            </select>

            <label for="details">Detail</label>
            <textarea id="details" name="details" placeholder="Enter detail.." required minlength="10"><%= meetup.details %></textarea>

            <label for="location">Location</label>
            <input type="text" id="location" name="location" placeholder="Enter location.." value="<%= meetup.location %>" required>
        
            <label for="date">Date</label>
            <input type="date" id="date" name="date" value="<%= meetup.date %>" required>

            <label for="startTime">Start Time</label>
            <input type="time" id="startTime" name="startTime" value="<%= meetup.startTime %>" required> 

            <label for="endTime">End Time</label>
            <input type="time" id="endTime" name="endTime" value="<%= meetup.endTime %>" required>

            <label for="image">Image URL</label>
            <input type="url" id="image" name="image" placeholder="Enter image url.." value="<%= meetup.image %>" required>
        
            <button class="button submit-btn mb-100">Update Meetup</button>
        </form>
    </div>
</div>
<%- include('../partials/footer.ejs') %>