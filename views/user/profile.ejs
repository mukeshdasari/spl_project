<%- include('../partials/header.ejs') %>
<div class="content">
    <div class="center-container">
        <form style="width: 100%;">
            <div class="event-heading">
                <h3 class="dis-in-bl">Profile</h3>
                <div class="float-right">
                    <button class="button update-btn" type="submit" formmethod="GET" formaction="/users/profile/edit">Edit Profile</button>
                    <button class="button password-btn" type="submit" formmethod="GET" formaction="/users/profile/change-password">Update Password</button>
                </div>
            </div>
        </form>
        <div class="center-container">
            <div class="row">
                <span style="width: 20%;"><b>First Name:</b></span> 
                <span style="margin-left: 50px;width: 80%;"><%= user.firstName %></span>
            </div>
            <div class="row">
                <span style="width: 20%;"><b>Last Name:</b></span>
                <span style="margin-left: 50px;width: 80%;"><%= user.lastName %></span>
            </div>
            <div class="row">
                <span style="width: 20%;"><b>Address:</b></span>
                <span style="margin-left: 50px;width: 80%;"><%= user.address %></span>
            </div>
            <div class="row">
                <span style="width: 20%;"><b>City:</b></span>
                <span style="margin-left: 50px;width: 80%;"><%= user.city %></span>
            </div>
            <div class="row">
                <span style="width: 20%;"><b>Zip:</b></span>
                <span style="margin-left: 50px;width: 80%;"><%= user.zip %></span>
            </div>
            <div class="row">
                <span style="width: 20%;"><b>State:</b></span>
                <span style="margin-left: 50px;width: 80%;"><%= user.state %></span>
            </div>
            <div class="row">
                <span style="width: 20%;"><b>Interests:</b></span>
                <span style="margin-left: 50px;width: 80%;"><%= user.interests %></span>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>